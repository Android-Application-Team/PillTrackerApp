<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:padding="10dp">

        <CheckBox
            android:id="@+id/checkBoxMypills"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_medicine_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Medicine Name: "
            android:textColor="@color/teal_700"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/checkBoxMypills"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dose: "
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_medicine_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_medicine_name" />

        <TextView
            android:id="@+id/tv_time_to_take_med"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time to take med: "
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_dose"
            app:layout_constraintTop_toBottomOf="@+id/tv_dose" />

        <TextView
            android:id="@+id/tv_remaining_medicine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remaining medicine: "
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@+id/tv_time_to_take_med"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_to_take_med" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
